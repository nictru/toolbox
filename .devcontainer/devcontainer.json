{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:0-3.11",
	"customizations": {
		"vscode": {
			"settings": {
				"python.analysis.typeCheckingMode": "basic"
			},
			"extensions": [
				"streetsidesoftware.code-spell-checker",
				"ms-python.python"
			]
		}
	},
	"postCreateCommand": "pip3 install -r requirements.txt"
}